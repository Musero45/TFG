        <demoitem>
            <label>Mission</label>
            <type>M-file</type>
            <source>demoHelicopterMissions</source>
        </demoitem>
    </demosection>
    <demosection>
        <label>Helicopter Flight Dynamics</label>
        <demoitem>
            <label>Simulation of helicopter dynamic response to control input</label>
            <type>M-file</type>
            <source>demoFlightDynamics</source>
        </demoitem>
